{
  "name": "moleculer-schedule",
  "version": "0.2.3",
  "description": "Scheduler service for Moleculer framework",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon examples/index.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext=.js src test",
    "deps": "npm-check -u",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "standard": "standard"
  },
  "keywords": [
    "moleculer",
    "microservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/artem-a/moleculer-schedule.git"
  },
  "author": "Artem A.",
  "license": "MIT",
  "peerDependencies": {
    "moleculer": "^0.14.13"
  },
  "devDependencies": {
    "benchmarkify": "^2.1.3",
    "coveralls": "^3.1.0",
    "eslint": "7.23.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "moleculer": "^0.14.13",
    "nodemon": "^2.0.7",
    "npm-check": "^6.0.1",
    "standard": "^16.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./src",
    "roots": [
      "../test"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/services/"
    ]
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "node-schedule": "^2.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
